{% extends "design.twig" %}

{% block content %}

<div class="row">
		<div class="col-md-6">
			
			<div class="block">
				<h4>User management</h4>
				{% if user!=null %}
					{{__("You're currently logged as ::user::",{user:user})|raw}} <strong>{{user}}</strong>
				{% else %}
				<p>
					<a href="/user/login" class="btn btn-default">{{_("Connexion")}}</a> 				
					{{_("ou")}}
					<a href="/install">{{_("créer un premier utilisateur par défaut")}}</a>	
				</p>
				<p>
					{{_("Les droits utilisateurs par défaut sont : ")}}
					<ul>
						<li>email : admin@localhost </li>
						<li>password : admin</li>
					</ul>
				</p>
				{% endif %}
			</div>
			
			<div class="block">
				<h4>{{_("Administration et migration base de données")}}</h4>
				<p>
					{{_("La librairie <a href='http://lib.haxe.org/p/dbadmin/' target='_blank'>dbadmin</a> propose une façon aisée de synchroniser les modèles de la base de données, ainsi que de réaliser les opération de recherche et édition des entrées.")|raw}}
					{{_("l'accès est limité aux admins")|raw}}
				</p>
				<a href="/db" class="btn btn-default">dbadmin</a>
			</div>
		</div>

		<div class="col-md-6">
			
			<div class="block">
				<h4>{{_("Actions du controlleur")}}</h4>
				<p>
					{{_('Throw controller actions like <b>Ok(url,msg)</b> or <b>Error(url,msg)</b> to manage what is commonly called "flash messages".')|raw}}
				</p>
				<a href="/okMessage" class="btn btn-default">Ok message</a>	<a href="/errorMessage" class="btn btn-default">Error message</a>
			</div>
			
			<div class="block">
				<h4>{{_("Mode Debug ou Production")}}</h4>
				{% if DEBUG %}
				<p>
					The app is currently in <b>DEBUG</b> mode. Change the value of "debug" to "0" in config.xml to switch to production mode. 
				</p>
				
				
				{% else %}
				
				<p>
					The app is currently in <b>PRODUCTION</b> mode. Change the value of "debug" to "1" in config.xml to switch to debug mode. 
				</p>
				
				{% endif %}
				
			</div>
			
		</div>
</div>

{% endblock %}